    <form action="/admin/addItem" method="post" onsubmit="return onItemSubmit()" enctype="multipart/form-data">
            <tr>
                <th>제품명</th>
                <th>
                    <input type="text" name="item_name" id="item_name" required/>
                </th>
            </tr>
            <tr>
                <th>제품가격</th>
                <th>
                    <input type="number" name="item_price" id="item_price" required/>
                </th>
            </tr>
            <tr>
                <th>제품 재고량</th>
                <th>
                    <input type="number" name="item_stock" id="item_stock" min="1" max ="999" required/>
                </th>
            </tr>
            <tr>
                <th>제품 브랜드</th>
                <th>
                    <input type="text" name="item_brand" id="item_brand">
                </th>
            </tr>
            <tr>
                <th>제품 설명</th>
                <th>
                    <textarea name="item_content" id="item_content" cols="30" rows="10" required></textarea>
                </th>
            </tr>
            <tr>
                <th>제품 카테고리</th>
                <th>
                    <select name="item_category" id="item_category" value="키보드">
                        <option value="키보드">키보드</option>
                        <option value="마우스">마우스</option>
                        <option value="스피커">스피커</option>
                        <option value="파우치">파우치</option>
                        <option value="저장장치">저장장치</option>
                    </select>
                </th>
            </tr>
            <tr>
                <th>제품 사진 업로드</th>
                <th>
                    <input type="file" name="imgFile">
                </th>
            </tr>
            <tr>
                <th>제품 디테일 사진 업로드</th>
                <th>
                    <input type="file" name="imgFile">
                </th>
            </tr>
            <tr>
                <th>제품 디테일 사진 업로드</th>
                <th>
                    <input type="file" name="imgFile">
                </th>
            </tr>
            <tr>
                <th>제품 디테일 사진 업로드</th>
                <th>
                    <input type="file" name="imgFile">
                </th>
            </tr>
            <tr>
                <th colspan="2">
                    <button type = "submit" class="au-btn au-btn-icon au-btn--blue">등록</button>
                </th>
            </tr>
          </tbody>
        </table>
    </form>
    <script>
    function onItemSubmit() {
        if ($("#item_name").val().trim() == "") {
            var message = "제품명을 입력해 주세요.";
            $("#item_name").val("");
            $("#item_name").focus();
            alert(message);
            return false;
        }
        if ($("#item_price").val().trim() == "") {
            var message = "제품 가격을 입력해 주세요.";
            $("#item_price").val("");
            $("#item_price").focus();
            alert(message);
            return false;
        }
        if ($("#item_stock").val().trim() == "") {
            var message = "현재 제품의 재고량을 입력해 주세요.";
            $("#item_stock").val("");
            $("#item_stock").focus();
            alert(message);
            return false;
        }
        if ($("#item_content").val().trim() == "") {
            var message = "제품의 설명을 입력해 주세요.";
            $("#item_content").val("");
            $("#item_content").focus();
            alert(message);
            return false;
        }
        if ($("#item_category").val().trim() == "") {
            var message = "제품의 설명을 입력해 주세요.";
            $("#item_category").val("");
            $("#item_category").focus();
            alert(message);
            return false;
        }
    }
    </script>
